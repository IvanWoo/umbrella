{
	"name": "@thi.ng/wasm-api",
	"version": "2.3.3",
	"description": "Generic, modular, extensible API bridge and infrastructure for hybrid JS & WebAssembly projects",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/wasm-api",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		},
		{
			"type": "liberapay",
			"url": "https://liberapay.com/thi.ng"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --options ../../typedoc.json --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "zig test zig/tests.zig && yarn test:prepare && bun test",
		"test:build-zig-allocators": "zig build-exe -fno-entry -fstrip --stack 4096 -OReleaseSmall -target wasm32-freestanding --dep wasm-api -Mroot=test/allocators.zig -Mwasm-api=zig/lib.zig --name allocators -rdynamic --import-symbols && mv allocators.wasm test",
		"test:build-zig-custom": "zig build-exe -fno-entry -fstrip --stack 4096 -OReleaseSmall -target wasm32-freestanding --dep wasm-api -Mroot=test/custom.zig -Mwasm-api=zig/lib.zig --name custom -rdynamic --import-symbols && mv custom.wasm test",
		"test:prepare": "yarn test:build-zig-allocators && yarn test:build-zig-custom",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.11.17",
		"@thi.ng/arrays": "^2.10.12",
		"@thi.ng/checks": "^3.6.20",
		"@thi.ng/errors": "^2.5.23",
		"@thi.ng/hex": "^2.3.61",
		"@thi.ng/idgen": "^2.2.57",
		"@thi.ng/logger": "^3.0.28"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.49.1",
		"esbuild": "^0.24.2",
		"typedoc": "^0.27.6",
		"typescript": "^5.7.3"
	},
	"keywords": [
		"allocator",
		"api",
		"bigint",
		"bindings",
		"browser",
		"c",
		"event",
		"free-list",
		"hex",
		"interop",
		"logger",
		"memory",
		"memory-mapped",
		"modular",
		"polyglot",
		"shared-memory",
		"string",
		"typedarray",
		"typescript",
		"utf8",
		"wasm",
		"webassembly",
		"zig"
	],
	"publishConfig": {
		"access": "public"
	},
	"browser": {
		"process": false,
		"setTimeout": false
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts",
		"include",
		"zig/*.zig"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./bridge": {
			"default": "./bridge.js"
		},
		"./deftype": {
			"default": "./deftype.js"
		},
		"./memory": {
			"default": "./memory.js"
		},
		"./object-index": {
			"default": "./object-index.js"
		},
		"./pointer": {
			"default": "./pointer.js"
		},
		"./string": {
			"default": "./string.js"
		}
	},
	"thi.ng": {
		"status": "alpha",
		"year": 2022
	}
}
