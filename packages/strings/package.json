{
	"name": "@thi.ng/strings",
	"version": "3.7.31",
	"description": "Various string formatting & utility functions",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://github.com/thi-ng/umbrella/tree/develop/packages/format#readme",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.11.0",
		"@thi.ng/errors": "^2.5.5",
		"@thi.ng/hex": "^2.3.44",
		"@thi.ng/memoize": "^3.3.2"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.43.0",
		"esbuild": "^0.20.2",
		"rimraf": "^5.0.5",
		"typedoc": "^0.25.12",
		"typescript": "^5.4.3"
	},
	"keywords": [
		"ansi",
		"composition",
		"conversion",
		"escape",
		"float",
		"format",
		"functional",
		"hex",
		"hollerith",
		"interpolation",
		"number",
		"padding",
		"percent",
		"radix",
		"slugify",
		"split",
		"string",
		"tab",
		"trim",
		"typescript",
		"unicode",
		"wordwrap"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./ansi": {
			"default": "./ansi.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./case": {
			"default": "./case.js"
		},
		"./center": {
			"default": "./center.js"
		},
		"./currency": {
			"default": "./currency.js"
		},
		"./cursor": {
			"default": "./cursor.js"
		},
		"./entities": {
			"default": "./entities.js"
		},
		"./escape": {
			"default": "./escape.js"
		},
		"./float": {
			"default": "./float.js"
		},
		"./format": {
			"default": "./format.js"
		},
		"./groups": {
			"default": "./groups.js"
		},
		"./hollerith": {
			"default": "./hollerith.js"
		},
		"./initials": {
			"default": "./initials.js"
		},
		"./int": {
			"default": "./int.js"
		},
		"./interpolate": {
			"default": "./interpolate.js"
		},
		"./join": {
			"default": "./join.js"
		},
		"./pad-left": {
			"default": "./pad-left.js"
		},
		"./pad-right": {
			"default": "./pad-right.js"
		},
		"./parse": {
			"default": "./parse.js"
		},
		"./percent": {
			"default": "./percent.js"
		},
		"./radix": {
			"default": "./radix.js"
		},
		"./range": {
			"default": "./range.js"
		},
		"./repeat": {
			"default": "./repeat.js"
		},
		"./ruler": {
			"default": "./ruler.js"
		},
		"./slugify": {
			"default": "./slugify.js"
		},
		"./splice": {
			"default": "./splice.js"
		},
		"./split": {
			"default": "./split.js"
		},
		"./stringify": {
			"default": "./stringify.js"
		},
		"./tabs": {
			"default": "./tabs.js"
		},
		"./trim": {
			"default": "./trim.js"
		},
		"./truncate-left": {
			"default": "./truncate-left.js"
		},
		"./truncate": {
			"default": "./truncate.js"
		},
		"./units": {
			"default": "./units.js"
		},
		"./utf8": {
