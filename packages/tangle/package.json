{
	"name": "@thi.ng/tangle",
	"version": "1.0.6",
	"description": "Literate programming code block tangling / codegen utility, inspired by org-mode & noweb",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"bin": "bin/tangle",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/tangle",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		},
		{
			"type": "liberapay",
			"url": "https://liberapay.com/thi.ng"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --options ../../typedoc.json --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.11.17",
		"@thi.ng/args": "^2.3.55",
		"@thi.ng/checks": "^3.6.20",
		"@thi.ng/compare": "^2.4.9",
		"@thi.ng/date": "^2.7.40",
		"@thi.ng/errors": "^2.5.23",
		"@thi.ng/file-io": "^2.1.23",
		"@thi.ng/logger": "^3.0.28",
		"@thi.ng/strings": "^3.9.2",
		"@thi.ng/transducers": "^9.2.15"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.49.1",
		"esbuild": "^0.24.2",
		"typedoc": "^0.27.6",
		"typescript": "^5.7.3"
	},
	"keywords": [
		"cli",
		"codegen",
		"generator",
		"literate-programming",
		"markdown",
		"org-mode",
		"parser",
		"rewrite",
		"tangle",
		"template",
		"text",
		"tool",
		"transclusion",
		"typescript",
		"variable"
	],
	"publishConfig": {
		"access": "public"
	},
	"browser": {
		"process": false,
		"setTimeout": false
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts",
		"bin"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./tangle": {
			"default": "./tangle.js"
		}
	},
	"thi.ng": {
		"year": 2022
	}
}
