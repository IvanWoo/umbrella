{
	"name": "@thi.ng/rstream-gestures",
	"version": "5.0.81",
	"description": "Unified mouse, mouse wheel & multi-touch event stream abstraction",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/rstream-gestures",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"contributors": [
		"Arthur Carabott (https://github.com/acarabott)",
		"Matei Adriel (https://github.com/Mateiadrielrafael)"
	],
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.11.7",
		"@thi.ng/checks": "^3.6.9",
		"@thi.ng/math": "^5.11.5",
		"@thi.ng/rstream": "^8.5.7",
		"@thi.ng/transducers": "^9.0.11"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.47.0",
		"esbuild": "^0.23.0",
		"typedoc": "^0.26.3",
		"typescript": "^5.5.3"
	},
	"keywords": [
		"animation",
		"dataflow",
		"event",
		"interaction",
		"mouse",
		"mousewheel",
		"multitouch",
		"reactive",
		"rstream",
		"stream",
		"touch",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./gesture-stream": {
			"default": "./gesture-stream.js"
		}
	},
	"thi.ng": {
		"alias": "gest",
		"parent": "@thi.ng/rstream",
		"related": [
			"hdom",
			"rdom"
		],
		"year": 2018
	}
}
