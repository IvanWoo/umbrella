		"normal",
		"pixel",
		"pyramid",
		"resize",
		"rgb565",
		"sample",
		"sharpen",
		"typedarray",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	},
